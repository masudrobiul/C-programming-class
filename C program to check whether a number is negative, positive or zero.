#include <stdio.h>
int main ()
{
    //Write a C program to check whether a number is negative, positive or zero.
    int a;
    scanf("%d", &a);
    if(a<0)
    {
        printf("a is negative");
    }
    else if(a>0)
    {
        printf ("a is positive");
    }
    else
    {
        printf("a is zero");
    }
    return 0;
}
